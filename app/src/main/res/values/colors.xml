<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <color name="googleBlue" tools:ignore="UnusedResources">#4285F4</color>
    <color name="googleBlueDark" tools:ignore="UnusedResources">#0059c1</color>
    <color name="googleRed" tools:ignore="UnusedResources">#DB4437</color>
    <color name="googleGreen" tools:ignore="UnusedResources">#0F9D58</color>

    <color name="color_primary">#6200ee</color>
    <color name="color_primary_variant">#3700b3</color>
    <color name="color_secondary">#ffc107</color>
    <color name="color_secondary_variant">#c79100</color>

    <!--colorBackground appears behind scrollable content and is used for the default window-->
    <!--background. colorSurface is mapped to the surface of components such as cards, sheets-->
    <!--and menus. colorError is used to indicate an error state for components such as-->
    <!--text fields.-->
    <color name="color_background">#ffffff</color>
    <color name="color_surface">#ffffff</color>
    <color name="color_error">#b00020</color>

    <color name="color_item_background">#dddddd</color>
    <color name="color_surface_secondary">#cccccc</color>
    <color name="color_on_background_secondary">#111111</color>

    <!--"On" colors define how text, icons and strokes are colored in relation to the surface-->
    <!--on which they appear.-->
    <color name="color_on_primary">#ffffff</color>
    <color name="color_on_secondary">#000000</color>
    <color name="color_on_background">#000000</color>
    <color name="color_on_surface">#000000</color>
    <color name="color_on_error">#ffffff</color>
</resources>
